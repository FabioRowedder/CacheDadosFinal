<html>
    <head>
        <title>Cache de Dados</title>
        <link rel="stylesheet" href="https://bootswatch.com/cerulean/bootstrap.min.css">

        <style>
            .remover:checked+span {
                color: red;
            }
    
            .lista-tarefas {
                list-style: none;
            }
        </style>
    </head>

    +<body>
        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
                        aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    <a class="navbar-brand" href="#">Gerenciador de Cache</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
    
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </nav>

        <div class="container">
            <form method='post' action='/cache/cacheValue'>
                <label>Incluir valor no Cache</label>
                <input type='text' name='dado' placeholder="Valor">
                <input type='submit' value="Incluir">
            </form>

            <%= titulo %>
            <form method='post' action='/cache/uncacheValue'>
                <ul class="lista-tarefa">
                    <% dados.forEach (function(dado) { %>
                        <li> 
                            <label> 
                                <input type="checkbox" class="remover" name="valuesToUncache" value="<%=dado %>">
                                <span><%=dado %></span>
                            </label>
                        </li>
                    <% }) %>
                </ul>
                <input type="submit" value="Remover"/>
            </form>

            <div class="well">
                <% if (contato == null) { %>
                    <h3>Contato nao encontrado. <h3>
                <% } else { %>
                    <h3>Contato</h3>
                    Nome: <%= contato.nome %><br>
                    Companhia: <%= contato.companhia %><br>
                    Telefone: <%= contato.telefone %><br>                
                <% } %>
            </div>

            <div class="well">
                <h3>Editar Contato</h3>
                <form method="post" action="/contato/editar">
                    <label>Nome</label><br>
                    <input type="text" name="nome" placeholder="Nome">
                    <br><br>
                    <label>Companhia</label><br>
                    <input type="text" name="companhia" placeholder="Companhia">
                    <br><br>
                    <label>Telefone</label><br>
                    <input type="text" name="telefone" placeholder="Telefone">
                    <br><br>
                    <input type="submit" value="Editar">
                </form> 
            </div>
        </div>
    </body>
</html>
